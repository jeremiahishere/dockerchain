#!/usr/bin/env ruby

begin
  require 'dockerchain'
  require 'dockerchain/cli'
rescue LoadError
  require 'rubygems'
  require 'dockerchain'
  require 'dockerchain/cli'
end

options = Dockerchain::CLI::OptionParser.parse!(ARGV)
chain_file = ARGV.pop
raise "Need to specify a file to process" unless chain_file

runner = Dockerchain::Runner.new(options)
runner.run(chain_file)
